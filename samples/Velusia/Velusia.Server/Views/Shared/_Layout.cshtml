<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Velusia.Server</title>
	<link href="/dist/inter-roman-var.woff2" rel="preload" as="font" type="font/woff2" crossorigin="anonymous" />
	<link href="/dist/styles.css" rel="stylesheet" asp-append-version="true" />
	<link rel="shortcut icon" href="/favicon.ico" type="image/ico" />
	<meta name="description" content="@ViewData["Title"]." />
</head>
<body class="bg-white">
	<div class="sm:min-h-screen sm:bg-gray-100 sm:flex sm:flex-col sm:justify-center sm:py-12 sm:px-6 lg:px-8">
		<div class="sm:mx-auto sm:w-full sm:max-w-xl">
			<div class="bg-white py-8 px-4 sm:shadow sm:px-10">
				<div role="main">
					@RenderBody()
				</div>
				@await Html.PartialAsync("_LoginPartial")
				<div class="mt-8 text-gray-700 text-sm" role="contentinfo">
					&copy; 2015-@DateTime.UtcNow.Year - <a asp-controller="Home" asp-action="Index" class="@Css.Link">Velusia.Server</a>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
